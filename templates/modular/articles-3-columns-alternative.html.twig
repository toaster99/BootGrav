{% set css = page.header.styles %} #}

<div class="featured_reviews_outer_container_alternative">
	<div class="container featured_reviews_container_alternative">
		{% if page.header.modular_title %}
			<h2 class=" hidden-xs">
				{{ page.header.modular_title }}
				{% if page.header.modular_description %}
					<br/>
					<small>{{ page.header.modular_description }}</small>
				{% endif %}
			</h2>
		{% else %}
			<div class="no_header_spacer hidden-xs"></div>
		{% endif %}

		<div class="row featured_reviews_row_alternative">
			{% for sub_page in page.collection %}
				{% if sub_page.url != page.url %}
					<div class='col-sm-4 featured_review_alternative'>
						<a href="{{ sub_page.url }}">
						<div class="featured_review_image_container_alternative">
									<div class="featured_review_image">
										<picture >
											<source srcset="{{ sub_page.media[sub_page.header.featured_image].cropZoom(800,600).url }} " media="(max-width: 768px)">

											<img class="img-responsive" src="{{ sub_page.media[sub_page.header.featured_image].cropZoom(800,600).url }}">
										</picture>
									</div>
									<div class="featured_review_image_darkener_alternative">

									</div>
									<div class="featured_review_content_alternative">
										{% if sub_page.header.tagline %}
											<h3><small>{{ sub_page.header.tagline }}</small></h3>
										{% endif %}
										<h3>{{ sub_page.title }}</h3>
										<div class="featured_review_stars_container">
											{% if sub_page.header.rating %}
												{% for i in 1..sub_page.header.rating %}
													<span class="rating_star_filled"></span>
												{% endfor %}
												{% if sub_page.header.rating < 3 %}
													{% for i in 1..(3 - sub_page.header.rating) %}
													<span class="rating_star_empty"></span>
													{% endfor %}
												{% endif %}
											{% endif %}
										</div>
									</div>
							</div>
						</a>
						</div>
					{% endif %}
			{% endfor %}
		</div>
	</div>
</div>
