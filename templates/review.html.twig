{% extends 'partials/base.html.twig' %}

{% block specific_includes %}
	{% do assets.add('theme://js/parallax.min.js') %}
	{% do assets.add('theme://js/review.js') %}
	{{ assets.js() }}
{% endblock %}




{% block content %}
	{% if page.header.featured_image %}
		<div class="review_header"data-parallax="scroll" data-image-src="{{ page.media[page.header.featured_image].url }}">

				<div class="container review_header_container">
					<div class="review_header_content">
						<h1>
							<small>Title of the stuff</small><br/>
							This is a test
						</h1>
					</div>
				</div>
		</div>
	{% endif %}
	<div class="container review_content">
    	{{ page.content }}
    </div>
    <div class="review_summary">
    	<div class="container">
	    	<div class="review_summary_row">
	    		<div class="review_summary_rating">
					<div class="row">
						<div class="col-sm-4">
			    			<h2>Rating</h2>
			    			{% if page.header.rating %}
								{% for i in 1..page.header.rating %}
									<span class="rating_star_filled"></span>
								{% endfor %}
								{% for i in 1..(3 - page.header.rating) %}
									<span class="rating_star_empty"></span>
								{% endfor %}
							{% else %}
								<div class="no_stars"></div>
							{% endif %}
						</div>
						<div class="col-sm-4">
							{% if page.header.pros %}
								<h2>Pros</h2>
								<ul>
									{% for pro in page.header.pros %}
										<li>{{ pro.pro }}</li>
									{% endfor %}
								</ul>
							{% endif %}
						</div>
						<div class="col-sm-4">
							{% if page.header.cons %}
								<h2>Cons</h2>
								<ul>
									{% for con in page.header.cons %}
										<li>{{ con.con }}</li>
									{% endfor %}
								</ul>
							{% endif %}
						</div>
					</div>
	    		</div>
	    		<div class="review_summary_purchase">
	    			{% if page.header.affiliate_links %}
		    			<h2>See It On</h2>
		    			<ul>
		    				{% for link in page.header.affiliate_links %}
			    				<a href="{{ link.url }}" style="float:none;" target="_blank">
					    			<li>
					    				{{ link.title }}
					    			</li>
					    		</a>
					    	{% endfor %}
		    			</ul>
		    		{% endif %}
	    		</div>
	    	</div>
	    </div>
    </div>
    <div class="container marketing">
    	<h2>Related Articles</h2>
    	{% include 'modular/articles-3-columns.html.twig' %}
    </div>
{% endblock %}