{% extends 'partials/base.html.twig' %}


{% block content %}
	<div class="review_header">

			<div class="container review_header_container">
				<div class="review_header_content">
					<h1>
						<small>Title of the stuff</small><br/>
						This is a test
					</h1>
				</div>
			</div>

	</div>
	<div class="container review_content">
    	{{ page.content }}
    </div>
    <div class="review_summary">
    	<div class="container">
	    	<div class="review_summary_row">
	    		<div class="review_summary_rating">
					<div class="row">
						<div class="col-sm-4">
			    			<h2>Rating</h2>
			    			{% if page.header.rating %}
								{% for i in 1..page.header.rating %}
									<span class="rating_star_filled"></span>
								{% endfor %}
								{% for i in 1..(3 - page.header.rating) %}
									<span class="rating_star_empty"></span>
								{% endfor %}
							{% else %}
								<div class="no_stars"></div>
							{% endif %}
						</div>
						<div class="col-sm-4">
							<h2>Pros</h2>
							<ul>
								<li>Amazing price</li>
								<li>Great picture quality</li>
								<li>Unique design</li>
							</ul>
						</div>
						<div class="col-sm-4">
							<h2>Cons</h2>
							<ul>
								{% for con in page.header.cons %}
								<li>Chinese interface</li>
								<li>Slow startup</li>
								<li>Terrible support</li>
								{% endfor %}
							</ul>
						</div>
					</div>
	    		</div>
	    		<div class="review_summary_purchase">
	    			<h2>See It On</h2>
	    			<ul>
	    				<a href="#" style="float:none;">
			    			<li>
			    				Amazon
			    			</li>
			    		</a>
			    		<a href="#">
			    			<li>
			    				TinyDeals
			    			</li>
			    		</a>
	    			</ul>
	    		</div>
	    	</div>
	    </div>
    </div>
    <div class="container marketing">
    	<h2>Related Articles</h2>
    	{% include 'modular/articles-3-columns.html.twig' %}
    </div>
{% endblock %}